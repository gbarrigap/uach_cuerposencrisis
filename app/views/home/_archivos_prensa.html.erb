<% (1..4).each do |i| %>
  <div>
    <div class="card">
      <h2>Titulo de la obra</h2>
      <p>Coreógrafo(a)</p>
      <p>Año</p>
      <p>Lugar de presentación</p>
      <p>Resumen</p>
      <div>
        <% if !!current_user %>
          <%= link_to icon('fas', 'file-pdf'), '/assets/Ficha.pdf', target: '_blank' %>
        <% else %>
          <%= icon('fas', 'file-pdf', class: 'nav-button nav-button-login', id: 'nav-button-login', data: { goto: 'login' }) %>
        <% end %>
        <%= link_to icon('fas', 'camera-retro') %>
      </div>
    </div>
    <%= image_tag('imagen_generica.png', class: 'circle') %>
  </div>
<% end %>
